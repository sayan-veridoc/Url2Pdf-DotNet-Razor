@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="w-75 mx-auto">
    <h1 class="display-4 text-center">Welcome to URL 2 PDF Converter</h1>
    <form class="form-inline mt-3 " method="post">
        <div class="form-group">
            <label asp-for="PageUrl" class="fw-bold">Url</label>
            <input type="url" class="form-control" asp-for="PageUrl" id="PageUrl" required />
            <span asp-validation-for="PageUrl" class="text-danger"></span>
        </div>
        <br />
       
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" asp-for="IsLandscape" id="IsLandscape" role="switch" />
            <label class="form-check-label" asp-for="IsLandscape"></label>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    @if (!string.IsNullOrEmpty(Model.DownloadLink))
    {
        <div class="mt-3">
            <a href="@Model.DownloadLink" class="btn btn-success">Download PDF</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}